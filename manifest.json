{
  "manifest_version": 3,
  "name": "Celebrity Image Blocker",
  "version": "1.2",
  "description": "A Chrome extension that blocks images of specified celebrities on web pages using AI face recognition.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": [
        "src/lib/face-api.min.js",
        "src/utils/storage.js",
        "src/utils/image-cache.js",
        "src/utils/face-matcher.js",
        "src/utils/debug.js",
        "src/content/content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/utils/*.js"
      ],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}